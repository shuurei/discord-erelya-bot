model Shop {
  guildId String
  guild   Guild  @relation(fields: [guildId], references: [id], onDelete: Cascade)

  isOpen         Boolean @default(true)
  useTagDiscount Boolean @default(false)

  color       Int?
  name        String
  description String?
  emoji       String?
  bannerUrl   String?

  expiresAt DateTime?
  createdAt DateTime  @default(now())

  items ShopItem[]

  @@id([guildId, name])
  @@map("shop")
}
